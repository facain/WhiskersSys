<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/view_profile_background"
    tools:context=".HomeFragment">

    <TextView
        android:id="@+id/titlefeature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="20dp"
        android:text="Featured Pet(s)"
        android:textColor="#fff"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/homeVP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/home_dots"
        android:layout_below="@+id/titlefeature"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        tools:listitem="@layout/card_layout" />

    <LinearLayout
        android:id="@+id/home_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:padding="20dp"/>


</RelativeLayout>