<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgs"
    android:padding="16dp"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="275dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:src="@drawable/invlogo" />

    <EditText
        android:id="@+id/signup_fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/img_logo"
        android:hint="First Name"
        android:backgroundTint="#000"
        android:textColorHint="#000"
        android:textColor="#000"
        android:drawableLeft="@drawable/person_blk"
        android:fontFamily="@font/roboto"
        android:inputType="textPersonName"
        android:paddingLeft="8dp"/>

    <EditText
        android:id="@+id/signup_lname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:backgroundTint="#000"
        android:textColorHint="#000"
        android:textColor="#000"
        android:drawableLeft="@drawable/person_blk"
        android:inputType="textPersonName"
        android:fontFamily="@font/roboto"
        android:paddingLeft="8dp"
        android:layout_below="@+id/signup_fname"/>

    <EditText
        android:id="@+id/signup_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contact Number"
        android:backgroundTint="#000"
        android:textColorHint="#000"
        android:textColor="#000"
        android:drawableLeft="@drawable/phone_blk"
        android:fontFamily="@font/roboto"
        android:inputType="textPhonetic"
        android:paddingLeft="8dp"
        android:layout_below="@+id/signup_lname"/>

    <EditText
        android:id="@+id/signup_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:backgroundTint="#000"
        android:textColorHint="#000"
        android:textColor="#000"
        android:drawableLeft="@drawable/mail_blk"
        android:fontFamily="@font/roboto"
        android:inputType="textEmailAddress"
        android:paddingLeft="8dp"
        android:layout_below="@+id/signup_contact"/>

    <EditText
        android:id="@+id/signup_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:backgroundTint="#000"
        android:textColorHint="#000"
        android:textColor="#000"
        android:drawableLeft="@drawable/mail_blk"
        android:fontFamily="@font/roboto"
        android:inputType="textPassword"
        android:paddingLeft="8dp"
        android:layout_below="@+id/signup_email"/>
    <EditText
        android:id="@+id/signup_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:backgroundTint="#000"
        android:textColorHint="#000"
        android:textColor="#000"
        android:drawableLeft="@drawable/mail_blk"
        android:fontFamily="@font/roboto"
        android:inputType="textPassword"
        android:paddingLeft="8dp"
        android:layout_below="@+id/signup_password"/>
    <Button
        android:id="@+id/signupnext_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#3395BF"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="5dp"
        android:text="Create Account"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_below="@+id/signup_confirm_password"
        android:onClick="registerUser"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Login Here"
        android:layout_below="@+id/signupnext_button"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:onClick="loginView"/>

</RelativeLayout>